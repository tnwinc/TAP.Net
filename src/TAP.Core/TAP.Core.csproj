<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.0;netstandard2.1;netstandard2.0;net45;net461</TargetFrameworks>

    <PackageProjectUrl>https://github.com/tnwinc/TAP.NET</PackageProjectUrl>
    <RepositoryUrl>https://github.com/tnwinc/TAP.NET</RepositoryUrl>
    <Description>TAP.Net allows ouputting tap compliant tests result to the console.</Description>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <Copyright>Copyright The Network5</Copyright>

  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net45'">
    <PackageReference Include="System.CodeDom" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.txt" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>
